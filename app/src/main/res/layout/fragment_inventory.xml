<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_inventory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/putDivider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:id="@+id/tv_inventory_shelf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/function_father_view_selector"
            android:gravity="center"
            android:text="按货架"
            android:textColor="@drawable/function_father_text_selector" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/putDivider" />


        <TextView
            android:id="@+id/tv_inventory_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/function_father_view_selector"
            android:gravity="center"
            android:text="按容器"
            android:textColor="@drawable/function_father_text_selector" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/putDivider" />


        <TextView
            android:id="@+id/tv_inventory_reel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/function_father_view_selector"
            android:gravity="center"
            android:text="按物料"
            android:textColor="@drawable/function_father_text_selector" />
    </LinearLayout>
</LinearLayout>