<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="站位扫描"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_start_seat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_box_background"
            android:gravity="center"
            android:hint="请先扫描一个站位"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/function_bind_equip_id"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_bind_id"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@drawable/input_box_background"
            android:gravity="center"
            android:hint="请扫描设备号"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_check_id"
            android:layout_width="100px"
            android:layout_marginLeft="10px"
            android:text="查看"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/btn_background"
            android:textColor="@color/btnCommonTextColor"
            android:layout_height="match_parent" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_bing_ok"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/btn_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="确认绑定"
            android:textColor="@color/btnCommonTextColor"
            android:textSize="18sp"
            android:layout_marginRight="5px"/>
        <TextView
            android:id="@+id/tv_cancel_doing"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/btn_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/btn_cancel_doing"
            android:textColor="@color/btnCommonTextColor"
            android:textSize="18sp"
            android:layout_marginLeft="5px"/>
    </LinearLayout>
</LinearLayout>