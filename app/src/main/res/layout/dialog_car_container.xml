<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="@color/CommonDialogTitleTextColor"
        android:background="@drawable/dialog_common_title_background"
        android:text="已装车的物品条码" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="物料号"
            android:gravity="center"
            android:layout_weight="3" />-->
       <!-- <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="物品条码"
            android:gravity="center"
            android:layout_weight="3" />-->
        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:gravity="center"
            android:layout_weight="1" />-->
    </LinearLayout>
    <TextView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_car_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tv_i_know"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="我知道啦"
        android:textColor="@color/CommonDialogTitleTextColor"
        android:gravity="center"
        android:background="@drawable/dialog_common_one_btn_background"
        />

</LinearLayout>