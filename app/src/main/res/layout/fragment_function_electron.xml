<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:orientation="vertical">

    <TextView
        android:id="@+id/frg_electron_tv_function_choice"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="电子仓"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#1D1D1D"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:padding="10dp"
              android:background="#333333"
              android:orientation="vertical">
            <Button
                android:id="@+id/frg_electron_btn_put"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/in"
                android:gravity="center"
                android:textSize="22sp" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="入库"
                  android:textSize="15sp"
                  android:textColor="#ffffff"
                  android:gravity="center" />
        </LinearLayout>
       <TextView
           android:layout_width="5dp"
           android:layout_height="match_parent" />
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:padding="10dp"
           android:background="#333333"
           android:orientation="vertical">
            <Button
                android:id="@+id/frg_electron_btn_stock"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:background="@mipmap/out"
                android:gravity="center"
                android:textSize="22sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="出库"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:gravity="center" />
        </LinearLayout>
            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#333333"
                android:orientation="vertical">
                <Button
                    android:id="@+id/frg_electron_btn_car"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:background="@mipmap/car"
                    android:gravity="center"
                    android:textSize="22sp"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="装车"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#333333"
                android:orientation="vertical">
            <Button
                android:id="@+id/frg_electron_btn_more"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@mipmap/more"
                android:gravity="center"
                android:textSize="22sp"
                tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center" />
            </LinearLayout>
            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#333333"
                android:orientation="vertical">
            <Button
                android:id="@+id/frg_electron_btn_inventory"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@mipmap/inventory"
                android:gravity="center"
                android:textSize="22sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="盘点"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:gravity="center" />
            </LinearLayout>
            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

              <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"

    android:gravity="center"
    />


</LinearLayout>